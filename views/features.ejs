<style>
    .plan-grid {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin: 40px auto 80px;
        max-width: 1200px;
        flex-wrap: wrap;
        padding: 0 20px;
    }

    .plan-card {
        background: rgba(25, 39, 52, 0.4);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 30px;
        text-align: center;
        flex: 1;
        min-width: 300px;
        max-width: 350px;
        transition: all 0.3s cubic-bezier(0.175, 0.885, 0.32, 1.275);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        position: relative;
        backdrop-filter: blur(10px);
    }

    .plan-card:hover {
        transform: translateY(-10px);
        border-color: var(--primary-color);
        background: rgba(25, 39, 52, 0.6);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
    }

    .plan-card.pro {
        border-color: var(--primary-color);
        background: rgba(29, 161, 242, 0.08);
        box-shadow: 0 0 20px rgba(29, 161, 242, 0.15);
    }

    .plan-card.pro-plus {
        border-color: #fbbf24;
        background: rgba(251, 191, 36, 0.08);
        box-shadow: 0 0 20px rgba(251, 191, 36, 0.15);
    }

    .plan-card.pro-plus .plan-badge {
        background: rgba(251, 191, 36, 0.2);
        color: #fef3c7;
    }

    .plan-card.pro-plus .plan-price {
        color: #fcd34d;
    }

    .plan-card.pro-plus .feature-summary li i {
        color: #fbbf24;
    }

    .plan-card.pro-plus::after {
        content: 'PREMIUM';
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: #fbbf24;
        color: #0b1622;
        font-size: 10px;
        font-weight: 900;
        padding: 4px 12px;
        border-radius: 10px;
        letter-spacing: 1px;
    }

    .plan-card.pro::after {
        content: 'RECOMMENDED';
        position: absolute;
        top: -12px;
        left: 50%;
        transform: translateX(-50%);
        background: var(--primary-color);
        color: white;
        font-size: 10px;
        font-weight: 900;
        padding: 4px 12px;
        border-radius: 10px;
        letter-spacing: 1px;
    }

    .notice-container {
        margin-top: 40px;
        text-align: center;
        max-width: 900px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 20px 60px;
    }

    .roadmap-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 15px;
        margin-top: 30px;
        text-align: left;
    }

    .roadmap-item {
        background: rgba(25, 39, 52, 0.4);
        border: 1px solid var(--border-color);
        padding: 20px;
        border-radius: 12px;
        transition: 0.3s;
    }

    .roadmap-item:hover {
        border-color: var(--primary-color);
        background: rgba(25, 39, 52, 0.6);
    }

    .plan-card {
        background: rgba(25, 39, 52, 0.5);
        border: 1px solid var(--border-color);
        border-radius: 20px;
        padding: 40px 20px;
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
        transition: all 0.3s;
    }

    .plan-price {
        font-size: 36px;
        font-weight: 900;
        margin: 10px 0;
        color: var(--primary-color);
    }

    .plan-badge {
        display: inline-block;
        padding: 4px 12px;
        border-radius: 20px;
        font-size: 11px;
        background: rgba(29, 161, 242, 0.1);
        color: var(--primary-color);
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        font-weight: bold;
    }

    .plan-card .feature-summary {
        list-style: none;
        padding: 0;
        margin: 25px auto;
        text-align: left;
        font-size: 14px;
        color: #8899a6;
        width: 100%;
        max-width: 260px;
        /* Centering the aligned list */
    }

    .plan-card .feature-summary li {
        margin-bottom: 14px;
        display: flex;
        align-items: flex-start;
        /* Better for multiline if needed */
        gap: 12px;
        line-height: 1.4;
    }

    .plan-card .feature-summary li i {
        color: var(--primary-color);
        font-size: 14px;
        flex-shrink: 0;
        margin-top: 2px;
        font-style: normal;
        font-weight: bold;
    }

    .feature-list {
        text-align: left;
        margin: 25px auto;
        max-width: 400px;
        line-height: 2;
        color: #fff;
        font-size: 15px;
    }

    .feature-list i {
        color: var(--success-color);
        margin-right: 10px;
        font-style: normal;
        font-weight: bold;
    }

    .comparison-table {
        width: 100%;
        margin-top: 40px;
        border-collapse: separate;
        border-spacing: 0;
        background: rgba(21, 32, 43, 0.5);
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
    }

    .comparison-table th,
    .comparison-table td {
        padding: 16px;
        text-align: center;
        border-bottom: 1px solid var(--border-color);
    }

    .comparison-table th:first-child,
    .comparison-table td:first-child {
        text-align: left;
        background: rgba(11, 22, 34, 0.4);
        font-weight: 600;
        padding-left: 24px;
    }

    .comparison-table tr:last-child td {
        border-bottom: none;
    }

    .comparison-table tr:hover {
        background: rgba(29, 161, 242, 0.05);
    }

    .comparison-table .col-pro {
        color: var(--primary-color);
    }

    .comparison-table .col-pro-plus {
        color: #fbbf24;
    }

    .comparison-table th.col-pro {
        background: rgba(29, 161, 242, 0.1);
        border-bottom: 2px solid var(--primary-color);
    }

    .comparison-table th.col-pro-plus {
        background: rgba(251, 191, 36, 0.1);
        border-bottom: 2px solid #fbbf24;
    }

    .comparison-table td.col-pro .active-check {
        color: var(--primary-color);
    }

    .comparison-table td.col-pro-plus .active-check {
        color: #fbbf24;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(5px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

